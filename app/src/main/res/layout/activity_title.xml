<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        tools:context=".TitleActivity">
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:columnCount="2">


        <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Enter Title"
                android:textSize="25dp"
                android:id="@+id/title"


        />

        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/iviewchangeTitle"
                android:src="@drawable/black"
                android:scaleType="fitXY"
        />

    </GridLayout>

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:columnCount="3"
            android:rowCount="3"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
    >
        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/imageblue"
                android:src="@drawable/blue"
                android:scaleType="fitXY"


        />

        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/imagegreen"
                android:src="@drawable/green"
                android:scaleType="fitXY"

        />

        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/imageyellow"
                android:src="@drawable/yellow"
                android:scaleType="fitXY"
        />

        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/imageOrange"
                android:src="@drawable/orange"
                android:scaleType="fitXY"
        />

        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/imagepurpe"
                android:src="@drawable/purple"
                android:scaleType="fitXY"
        />

        <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/imageRed"
                android:src="@drawable/red"
                android:scaleType="fitXY"
        />
    </GridLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/titlesave"
            android:text="SAVE"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
    />
</LinearLayout>